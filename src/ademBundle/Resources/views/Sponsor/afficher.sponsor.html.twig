{% block title %}
    Liste des sponosors
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">

{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function () {
            $('#evenementTab').DataTable();
        });
    </script>






{% endblock %}

{% block body %}
    <div class="page-content-wrapper ">

    <div class="container sm-gutter">
        <br><br>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Mes sponsors </b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    <a href="" class="btn btn-info">
                        <i class="fa fa-pie-chart" aria-hidden="true"></i>
                        Statistique sur mes Annonces
                    </a>
                    <a href="{{ path('ajouter_sponsor') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;Ajouter un sponsor
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">

                <div class="tab-content" >
                    <div class="tab-pane active" id="annonce" aria-expanded="true">
                        <table id="evenementTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>TypeSponsor</th>
                                <th>Montant</th>
                                <th>Quantite</th>

                                <th>Email</th>
                                <th>image</th>
                                <th>Operations</th>
                            </tr>
                            </thead>
                            <thead>
                            <tbody>
                            {% for c in Sponsor %}
                                <tr>
                                    <td>{{ c.nom }}</td>
                                    <td>{{ c.typesponsor }} </td>
                                    <td>{{ c.montant }}</td>
                                    <td>{{ c.quantite }}</td>

                                    <td>{{ c.email}}</td>

                                    <td style="width: 60px; padding:0px; text-align: center">
                                        {% if c.image != '' %}
                                            <img alt="film Pic" style="width:150px;height: 60px;"
                                                 src="http:\\localhost\web_projet\web\Uploads\sponsor\{{ c.image }}"
                                                 class="img-circle img-responsive">

                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('modifier_sponsor', { 'idsponsors': c.idsponsors }) }}"
                                               data-toggle="tooltip" title="Modifier Sponsor">
                                                <i class="fa fa-pen-square"></i>
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('supprimer_sponsor', { 'idsponsors': c.idsponsors}) }}"
                                               data-toggle="tooltip" title="Supprimer Sponsor">
                                                <i class="fa  fa-trash"></i>
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('ajouter_sponsorisation', { 'idsponsors': c.idsponsors }) }}"
                                               data-toggle="tooltip" title="Affecter a un evenement">
                                                <i> Affecter a un evenement</i>
                                            </a>
                                        </div>

                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


{% endblock %}