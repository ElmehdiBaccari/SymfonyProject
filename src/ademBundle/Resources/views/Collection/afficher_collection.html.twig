{% extends '@adem/Default/dashboard.html.twig' %}


{% block title %}
    Liste de mes Collections
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">

{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function () {
            $('#ColectionTab').DataTable();
        });
    </script>






{% endblock %}

{% block body %}

<div class="page-content-wrapper ">

    <div class="container sm-gutter">
        <br><br>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Mes Annonces </b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>

                    <a href="{{ path('ajouter_collection') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;Ajouter une collection
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>


        <br><br><br><br>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">

                <div class="tab-content" >
                    <div class="tab-pane active" id="annonce" aria-expanded="true">
                        <table id="ColectionTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Nom_collection</th>
                                <th>Date_collection</th>
                                <th>Image</th>
                                <th>Description</th>
                                <th>operations</th>

                            </tr>
                            </thead>
                            <thead>
                            <tbody>
                            {% for p in Collections %}
                                <tr>
                                    <td>{{ p.nomCollection}}</td>
                                    <td>{{ p.datecollection |date("m/d/Y")}} </td>

                                    <td style="width: 60px; padding:0px; text-align: center">
                                        {% if p.image != '' %}
                                            <img alt="User Pic" style="width:150px;"
                                                 src="http:\\localhost\web_projet\web\Uploads\collection\{{ p.image }}"
                                                 class="img-circle img-responsive">

                                        {% endif %}
                                    <td>{{ p.description }}</td>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('modifier_collection', { 'num_collection': p.num_collection }) }}"
                                               data-toggle="tooltip" title="Editer user">
                                                <i class="fa fa-pen-square"></i>
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('supprimer_collection', { 'num_collection': p.num_collection}) }}"
                                               data-toggle="tooltip" title="Supprimer Utilisateur">
                                                <i class="fa  fa-trash"></i>
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href=""
                                               data-toggle="tooltip" title="show Annonce">
                                                <i class="fa fa-binoculars"></i>
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path("mail" )}}"
                                               data-toggle="tooltip" title="envoyer mail">
                                                <i class="fa fa-binoculars"></i>
                                            </a>
                                        </div>


                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


{% endblock %}

