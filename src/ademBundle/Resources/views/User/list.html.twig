{% extends '@adem/Default/dashboard.html.twig' %}










{% block title %}
    Liste de mes Annonces
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">

{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function () {
            $('#annonceTab').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });
        });
    </script>






{% endblock %}

{% block body %}
<div class="page-content-wrapper ">

    <div class="container sm-gutter">
        <br><br>
    <div class="row">
        <div class="container sm-gutter">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <br>
                    <h1><b>Utilisateurs </b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    <a href="" class="btn btn-info">
                        <i class="fa fa-pie-chart" aria-hidden="true"></i>
                        Statistique sur les utilisateurs
                    </a>
                    <a href="{{ path('_add') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;Ajouter un utilisateur
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    </div>
        <br><br>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">

                <div class="tab-content" >
                    <div class="tab-pane active" id="annonce" aria-expanded="true">
                        <table id="annonceTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Mail</th>
                                <th>date naissance</th>
                                <th>statut</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <thead>
                            <tbody>
                            {% for p in personnes %}
                                <tr>
                                    <td>{{ p.nom }}</td>
                                    <td>{{ p.prenom }} </td>
                                    <td>{{ p.adressemail }}</td>
                                    <td>{{ p.datedenaissance |date("m/d/Y")}}</td>
                                    <td>{{ p.statut }}</td>
                                    <td style="width: 60px; padding:0px; text-align: center">
                                        {% if p.photo != '' %}
                                            <img alt="User Pic" style="width:150px;"
                                                 src="http:\\localhost\web_projet\web\Uploads\user\photo\{{ p.photo }}"
                                                 class="img-circle img-responsive">

                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('_update', { 'id': p.id }) }}"
                                               data-toggle="tooltip" title="Editer user">
                                                <i class="fa fa-pen-square"></i>
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('_delete_user', { 'id': p.id }) }}"
                                               data-toggle="tooltip" title="Supprimer Utilisateur">
                                                <i class="fa  fa-trash"></i>
                                            </a>
                                        </div>

                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

    </div>


{% endblock %}

