{% extends '@adem/Default/dashboard.html.twig' %}
{% block javascripts %}
    <script>
        $("#adembundle_evenement_imageFile_file").change(function() {

            if (this.files && this.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#image').attr('src', e.target.result);
                    $('#image').css('display','inline-block');
                }

                reader.readAsDataURL(this.files[0]);
            }

        });
    </script>
{% endblock %}
{% block title %}
    Modification d'une Annonce
{% endblock %}

{% block body %}
    {{ form_start(formEvenement) }}

    <div class="row">
        <div class="col-md-6">
            <h1><b>  Modification d'une Annonce</b></h1>
        </div>
        <div class="col-md-6 text-right">
            <br>
            <button type="submit" class="btn btn-success" value="Create">
                <i class="fa fa-check" aria-hidden="true"></i>Confirmer
            </button>
            <a href="{{ path('afficher_evenement') }}" class="btn btn-secondary">
                <i class="fa fa-undo" aria-hidden="true"></i>Retour Ã  la liste</a>
            <br>
        </div>
    </div>

    {% form_theme formEvenement '@adem/bootstrap_3_layout.html.twig' %}
    {{ form_widget(formEvenement) }}
    <div>
        <img src="" id="image" style="display: none" width="200px"height="200px">
    </div>
    {{ form_end(formEvenement) }}

{% endblock %}