{% block title %}
    Liste de livres
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#livreTab').DataTable();
        });
    </script>






{% endblock %}

{% block body %}


<div class="page-content-wrapper ">

    <div class="container sm-gutter">
        <br><br>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1><b>Mes Livres </b></h1>
                </div>
                <div class="col-md-6 text-right">
                    <br>
                    <a href="{{ path('statistique_livre') }}" class="btn btn-info">
                        <i class="fa fa-pie-chart" aria-hidden="true"></i>
                        Statistique sur mes Livres
                    </a>
                    <a href="{{ path('ajouterlivre') }}" class="btn btn-success">
                        <i class="icon-plus">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;Ajouter un livre
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-borderless">

                <div class="tab-content" >
                    <div class="tab-pane active" id="annonce" aria-expanded="true">
                        <table id="livreTab" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>titreLivre</th>
                                <th>dateEdition</th>
                                <th>description</th>
                                <th>qteLivre</th>
                                <th>categorieLivre</th>
                                <th>image</th>
                                <th>ay7aja</th>

                            </tr>
                            </thead>
                            <thead>
                            <tbody>
                            {% for p in livres %}
                                <tr>
                                    <td>{{ p.titreLivre }}</td>
                                    <td>{{ p.dateEdition |date("m/d/Y")}}</td>
                                    <td>{{ p.descriptionLivre }} </td>
                                    <td>{{ p.qteLivre }}</td>
                                    <td>{{ p.categorieLivre }}</td>
                                    <td style="width: 60px; padding:0px; text-align: center">
                                        {% if p.image != '' %}
                                            <img alt="Livre Pic" style="width:150px;"
                                                 src="http:\\localhost\web_projet\web\Uploads\livre\{{ p.image}}"
                                                 class="img-circle img-responsive">

                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('modifier_livre', { 'id_livre': p.id_livre }) }}"
                                               data-toggle="tooltip" title="Editer user">
                                                <i class="fa fa-pen-square"></i>
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('supprimer_livre', { 'id_livre': p.id_livre }) }}"
                                               data-toggle="tooltip" title="Supprimer Utilisateur">
                                                <i class="fa  fa-trash"></i>
                                            </a>
                                        </div>
                                       {# <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path("mail") }}"
                                               data-toggle="tooltip" title="send mail">
                                                <i class="fa fa-binoculars"></i>
                                            </a>
                                        </div>#}
                                        <div class="btn-group btn-group-sm btn-group-horizontal">
                                            <a class="btn btn-secondary"
                                               href="{{ path('pdfpA') }}"
                                               data-toggle="tooltip" title="Generate PDF">
                                                <i class="fa  fa-trash"></i>
                                            </a>
                                        </div>



                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
